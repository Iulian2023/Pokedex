<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Pokedex</title>
</head>
    <body>
        <div class="container-fluid bg-dark shadow py-3">    
            <h1 class="text-center text-info">Welcome to Pokedex</h1>
        </div>
        <div class="container-fluid bg-info d-flex flex-column justify-content-center">
            <h1 class="text-center py-3">Liste des pokemons</h1>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 g-4">
                <% pokemons.forEach(function(pokemon) { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="https://img.pokemondb.net/sprites/home/normal/<%= pokemon.identifier %>.png" class="card-img-top" alt="<%= pokemon.identifier %>" style="width: 40%; margin: 0 auto;">
                            <div class="card-body">
                                <h5 class="card-title text-center" style="font-size: 1.1rem;"><%= pokemon.identifier %></h5>
                                <p class="card-text" style="font-size: 0.9rem;">ID: <%= pokemon.id %></p>
                            </div>
                            <div class="card-footer text-center d-grid gap-2">
                                <a href="/pokemons/<%= pokemon.id %>" class="btn btn-dark btn-sm">See Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
